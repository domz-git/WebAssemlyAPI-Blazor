@inherits DisplayProductsBase

@foreach(var item in Products)
{
    //We make this code that outputs a row of products reusable by putting it into its own separete
    //Razor component (DisplayProducts.razor), we alse need to make a base cs (DisplayProductsBase.cs)
    //class for that Razor component
    <div class="col-md-3">
        <a href="/ProductDetails/@item.Id">
            <div class="card">
                <img src="@item.ImageURL">
                <div class="card-body">
                    <h5 class="card-title">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        <b>@item.Price.ToString("C")</b>
                    </p>
                </div>
            </div>

        </a>
    </div>
}
